<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: rgba(0,0,0,0.80);" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.config.OptionPane">
   <children>
      <VBox alignment="CENTER" fillWidth="false" spacing="20.0" StackPane.alignment="CENTER">
         <children>
            <Label text="Music" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Slider fx:id="musicVolumeSlider" minorTickCount="25" prefWidth="300.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0" />
            <Label text="Sound Effects" textFill="WHITE">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Slider fx:id="soundVolumeSlider" blockIncrement="1.0" minorTickCount="25" prefWidth="300.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0" />
            <HBox spacing="100.0">
               <padding>
                  <Insets left="40.0" right="40.0" />
               </padding>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets bottom="100.0" />
         </StackPane.margin>
      </VBox>
      <Button mnemonicParsing="false" onAction="#resumeGame" prefWidth="150.0" text="Resume Game" StackPane.alignment="BOTTOM_RIGHT">
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
         <StackPane.margin>
            <Insets bottom="50.0" left="220.0" right="50.0" top="50.0" />
         </StackPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#goToMainMenu" prefWidth="150.0" text="Return to Main Menu" StackPane.alignment="BOTTOM_LEFT">
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
         <StackPane.margin>
            <Insets bottom="50.0" left="50.0" right="220.0" top="50.0" />
         </StackPane.margin>
      </Button>
   </children>
</StackPane>
